package com.amazon.service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.amazon.dao.ProductDao;
import com.amazon.entity.Availableproduct;
import com.amazon.entity.Categories;
import com.amazon.entity.Product;

@Service
public class ProductService {
    @Autowired
    ProductDao productDao;

    public List<Availableproduct> allProduct() {
        return productDao.allProduct();
    }

    public Product addProductToCart(Product product, Long userId) {
        return productDao.addProductToCart(product, "Cart", userId);
    }

    public List<Product> viewProductCart(Long userId) {
        return productDao.viewProductCart("Cart", userId);
    }

    public Boolean delCartProductsById(Integer productid, Long userId) {
        return productDao.delCartProductsById(productid, "Cart", userId);
    }

    public Product addProductToBuy(Product product, Long userId) {
        return productDao.addProductToBuy(product, "Buy", userId, "In Progress");
    }

    public List<Product> viewProductBuy(Long userId) {
        return productDao.viewProductBuy("Buy", userId);
    }

    public Boolean delBuyProductsById(Integer productid, Long userId) {
        return productDao.delBuyProductsById(productid, "Buy", userId);
    }

    public List<Availableproduct> viewProductsByCategory(String category) {
        return productDao.viewProductsByCategory(category);
    }

    public List<Categories> viewCategory() {
        return productDao.viewCategory();
    }

    public List<Availableproduct> search(String name) {
        return productDao.search(name);
    }

    public Product updateCart(Product product, Long userId) {
        return productDao.updateCart(product, userId);
    }

    public List<Product> addProductsToBuy(List<Product> products, Long userId) {
        return productDao.addProductsToBuy(products, "Buy", userId);
    }

    public Availableproduct updateQuantity(Long productid, Long quantity) {
        return productDao.updateQuantity(productid, quantity);
    }
}
